@page
@model FishCalc.Web.Pages.Features.ReceiptModel
@{
ViewData["Title"] = "Báo cáo sản lượng";
var cultureInfo = new System.Globalization.CultureInfo("vi-VN");
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="min-h-screen bg-slate-100 py-8 px-4 print:bg-white print:p-0">

    <div class="max-w-4xl mx-auto mb-6 flex flex-col sm:flex-row justify-between items-center gap-4 print:hidden">
        <div>
            <h1 class="text-2xl font-bold text-slate-800">Quản Lý Sản Lượng</h1>
            <p class="text-slate-500 text-sm">Xem và in báo cáo chi tiết theo ngày</p>
        </div>

        <form method="get" class="flex items-center gap-3 bg-white p-2 rounded-lg shadow-sm border border-slate-200">
            <div class="relative">
                <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none text-slate-400">
                    <i class="fa-regular fa-calendar"></i>
                </div>
                <input type="date" asp-for="SearchDate" onchange="this.form.submit()"
                    class="pl-10 pr-3 py-2 bg-slate-50 border border-slate-200 text-slate-900 text-sm rounded-md focus:ring-blue-500 focus:border-blue-500 block w-full outline-none transition-colors" />
            </div>

            <button type="button" onclick="window.print()"
                class="text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 font-medium rounded-md text-sm px-4 py-2 transition-colors flex items-center gap-2">
                <i class="fa-solid fa-print"></i> In Phiếu
            </button>
        </form>
    </div>

    <div
        class="max-w-4xl mx-auto bg-white rounded-xl shadow-lg overflow-hidden border border-slate-200 print:shadow-none print:border-none print:rounded-none print:w-full">

        <div
            class="p-8 border-b border-slate-100 bg-slate-50/50 print:bg-white print:p-0 print:border-b-2 print:border-black print:mb-4">
            <div class="flex justify-between items-start">
                <div>
                    <span
                        class="bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded border border-blue-200 print:hidden">HOÀN
                        TẤT</span>
                    <h2 class="mt-2 text-3xl font-bold text-slate-900 uppercase tracking-tight">Bảng Kê Lương</h2>
                    <p class="text-slate-500 mt-1">Ngày tính lương: <span
                            class="font-semibold text-slate-900">@Model.SearchDate.ToString("dd/MM/yyyy")</span></p>
                </div>
                <div class="text-right">
                    <div class="text-2xl font-bold text-blue-600 tracking-wider print:text-black">FISH<span
                            class="text-slate-700">CALC</span></div>
                    <div class="text-sm text-slate-500 mt-1">Phân xưởng chế biến thủy hải sản</div>
                    <div class="text-xs text-slate-400 mt-0.5">Mã phiếu:
                        #@Model.SearchDate.ToString("yyyyMMdd")-@DateTime.Now.ToString("HHmm")</div>
                </div>
            </div>
        </div>

        <div class="p-8 print:p-0">
            @if (Model.ReceiptData.Any())
            {
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="text-slate-500 border-b border-slate-200 text-xs uppercase tracking-wider">
                        <th class="pb-3 font-semibold pl-4 w-4/12">Tổ / Công nhân</th>
                        <th class="pb-3 font-semibold text-center w-2/12">S.Lượng (Kg)</th>
                        <th class="pb-3 font-semibold text-right w-2/12 pr-4">Thành tiền</th>
                    </tr>
                </thead>
                <tbody class="text-sm">
                    <!-- break-before-page để tách mỗi tổ là 1 trang-->
                    @foreach (var unit in Model.ReceiptData)
                    {
                    <tr class="bg-slate-100 border-y border-slate-300 break-inside-avoid">

                        <td class="py-3 pl-4">
                            <div class="flex items-center gap-2">
                                <div
                                    class="w-6 h-6 rounded-full bg-blue-200 text-blue-700 flex items-center justify-center text-xs print:hidden">
                                    <i class="fa-solid fa-users"></i>
                                </div>
                                <span class="font-bold text-slate-800 uppercase tracking-wide">
                                    @unit.UnitName
                                </span>
                            </div>
                        </td>

                        <td class="py-3  text-center font-bold  text-blue-700">
                            @unit.TotalWeight.ToString("N1") kg 
                            <span class="text-xs text-slate-400 italic font-medium">
                               (tổng kí)
                            </span>
                        </td>

                        <td class="py-3 pr-4 text-center font-bold text-blue-700 print:text-black">
                            @unit.TotalMoney.ToString("#,##0", cultureInfo) .000 
                            <span class="text-xs text-slate-400 italic font-medium">
                               (tổng tiền)
                            </span>
                        </td>
                    </tr>


                    var count = 0;
                    @foreach (var item in unit.Items)
                    {
                    count++;
                    <tr class="border-b border-dashed border-slate-200 text-sm">
                        <td class="px-4 py-2 text-slate-600">
                            <span class="text-blue-600 font-semibold">@count.</span>
                            <span class="ml-1">@item.FishName</span>
                            <span class="text-xs text-slate-400 italic">
                                (@item.PricePerKg/kg)
                            </span>
                        </td>

                        <td class="py-2 text-center text-slate-500 text-sm">
                            @item.Quantity.ToString("N1") kg
                        </td>

                        <td class="py-2 text-center text-slate-600 font-medium">
                            @item.TotalPrice.ToString("#,##0") .000
                        </td>

                    </tr>


                    }
                    <tr class="hidden print:hidden sm:table-row">
                        <td colspan="3" class="h-6"></td>
                    </tr>

                    }

                </tbody>

                <tfoot>
                    <tr class="border-t-2 border-slate-900 bg-slate-100">
                        <td class="pt-4 pl-4 text-base font-bold uppercase text-slate-800">
                            Tổng cộng
                        </td>
                        <td class="pt-4 text-center text-base font-bold text-slate-800">
                            @Model.GrandTotalWeight.ToString("N2") kg
                        </td>
                        <td class="pt-4 pr-4 text-center text-xl font-extrabold text-red-600 print:text-black">
                            @Model.GrandTotalMoney.ToString("#,##0", cultureInfo) .000
                        </td>
                    </tr>
                </tfoot>

            </table>
            @if (!string.IsNullOrWhiteSpace(Model.DailyNote))
            {
            <div
                class="mt-6 p-4 border border-dashed border-slate-300 rounded-lg bg-slate-50 print:bg-white break-inside-avoid">
                <p class="text-sm font-semibold text-slate-700 uppercase mb-1">
                    Ghi chú
                </p>
                <p class="text-sm text-slate-600 italic leading-relaxed">
                    @Model.DailyNote
                </p>
            </div>
            }


            <div class="mt-12 grid grid-cols-2 gap-4 text-right print:mt-8 break-inside-avoid">

                <div>
                    <p class="text-sm font-bold text-slate-800 uppercase">Bảo quản</p>
                    <p class="text-xs text-slate-400 italic mt-1 mb-16">(Ký, ghi rõ họ tên)</p>
                </div>
                <div>
                    <p class="text-sm font-bold text-slate-800 uppercase">Xác nhận gửi tiền</p>
                    <p class="text-xs text-slate-400 italic mt-1 mb-16">(Ký, đóng dấu)</p>
                </div>
            </div>
            }
            else
            {
            <div class="flex flex-col items-center justify-center py-16 text-slate-400">
                <i class="fa-regular fa-folder-open text-4xl mb-4 opacity-50"></i>
                <p class="text-lg">Không tìm thấy dữ liệu sản xuất</p>
                <p class="text-sm">Vui lòng chọn một ngày khác để xem báo cáo.</p>
            </div>
            }
        </div>

        <div class="bg-slate-50 px-8 py-4 border-t border-slate-100 flex justify-between items-center print:hidden">
            <a asp-page="/Index"
                class="text-sm text-slate-500 hover:text-blue-600 font-medium flex items-center gap-1 transition-colors">
                <i class="fa-solid fa-arrow-left"></i> Quay lại trang chủ
            </a>
            <span class="text-xs text-slate-400">FishCalc System v1.0</span>
        </div>
    </div>
</div>