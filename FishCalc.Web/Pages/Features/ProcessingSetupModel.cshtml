@page "/ProcessingSetupModel"
@model FishCalc.Web.Pages.Features.ProcessingSetupModel
@{
    ViewData["Title"] = "Thiết Lập Quy Trình";
}

<div class="container mx-auto px-4 py-8">
    
    <!-- THANH TIẾN TRÌNH (WIZARD PROGRESS) -->
    <div class="max-w-3xl mx-auto mb-10">
        <div class="relative flex items-center justify-between">
            
            <!-- 1. Thanh nền xám (Background Line) -->
            <div class="absolute left-0 top-1/2 transform -translate-y-1/2 w-full h-1 bg-gray-200 -z-20 rounded-full"></div>
            
            <!-- 2. Thanh tiến trình xanh lá (Active Line) - Mặc định width 0% -->
            <div id="progress-bar" class="absolute left-0 top-1/2 transform -translate-y-1/2 h-1 bg-green-500 -z-10 rounded-full transition-all duration-500 ease-in-out" style="width: 0%;"></div>
            
            <!-- Step 1 Indicator -->
            <div id="step1-indicator" class="flex flex-col items-center bg-white px-2 z-10">
                <div class="w-10 h-10 rounded-full bg-blue-600 text-white flex items-center justify-center font-bold border-4 border-white shadow-md transition-colors duration-300">1</div>
                <span class="text-xs font-bold mt-2 text-blue-600 uppercase tracking-wide">Chọn Cá</span>
            </div>

            <!-- Step 2 Indicator -->
            <div id="step2-indicator" class="flex flex-col items-center bg-white px-2 z-10">
                <div class="w-10 h-10 rounded-full bg-gray-300 text-gray-600 flex items-center justify-center font-bold border-4 border-white shadow-md transition-colors duration-300">2</div>
                <span class="text-xs font-bold mt-2 text-gray-400 uppercase tracking-wide">Chọn Đơn Vị</span>
            </div>
        </div>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4 font-medium text-center"></div>

    <form method="post" id="setupForm">
        
        <!-- ================= BƯỚC 1: CHỌN CÁ ================= -->
        <div id="step-1-section" class="transition-opacity duration-300 animate-fade-in">
            <div class="text-center mb-8">
                <h2 class="text-2xl font-bold text-gray-800">Bước 1: Chọn các loại cá</h2>
                <p class="text-gray-500">Vui lòng chọn các loại cá cho việc tính toán tiền công</p>
            </div>
            
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-8"> 
                @for (var i = 0; i < Model.FishTypes.Count; i++)
                {
                    var fish = Model.FishTypes[i];
                    <label for="fish_@fish.Id" class="block group relative h-full">
                        
                        <input type="checkbox" 
                               name="SelectedFishIds" 
                               value="@fish.Id" 
                               class="fish-checkbox hidden" 
                               id="fish_@fish.Id" 
                        />
                        
                        <div id="card_fish_@fish.Id" 
                             class="fish-card h-full border-2 border-gray-100 rounded-2xl p-6 text-center cursor-pointer 
                                    shadow-sm hover:shadow-lg hover:border-blue-400 hover:-translate-y-1 transition-all duration-300 
                                    flex flex-col items-center bg-white relative">
                            
                            <div class="w-20 h-20 mb-4 rounded-full bg-blue-50 p-1 shadow-inner">
                                <img src="@fish.ImgFishUrl" alt="@fish.Name" 
                                     class="w-full h-full object-cover rounded-full" 
                                     onerror="this.onerror=null;this.src='/images/default_fish.png';" 
                                />
                            </div>
                            
                            <h4 class="text-lg font-bold text-gray-800 mb-1">@fish.Name</h4>
                            <span class="inline-block bg-gray-100 text-gray-600 text-xs px-2 py-1 rounded-md">
                                ĐVT: @fish.UnitOfMeasure
                            </span>
                            
                            <!-- Checkmark icon -->
                            <div id="badge_fish_@fish.Id" class="absolute top-3 right-3 bg-green-500 text-white rounded-full p-1 shadow-md hidden transform scale-100 transition-transform duration-300">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                </svg>
                            </div>
                        </div>
                    </label>
                }
            </div>

            <div class="text-center">
                <button type="button" id="btn-next" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-10 rounded-full shadow-lg hover:shadow-blue-500/30 transform hover:-translate-y-0.5 transition duration-300 flex items-center mx-auto gap-2">
                    Tiếp Tục 
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                    </svg>
                </button>
                <p id="step1-error" class="text-red-500 mt-3 hidden text-sm font-semibold bg-red-50 inline-block px-4 py-1 rounded-full animate-pulse">
                    ⚠️ Vui lòng chọn ít nhất một loại cá
                </p>
            </div>
        </div>

        <!-- ================= BƯỚC 2: CHỌN ĐƠN VỊ (GIAO DIỆN MỚI) ================= -->
        <div id="step-2-section" class="hidden transition-opacity duration-300 animate-fade-in">
            <div class="text-center mb-8">
                <h2 class="text-2xl font-bold text-gray-800">Bước 2: Đơn vị & Tổ gia công</h2>
                <p class="text-gray-500">Chọn Tổ hoặc Đơn vị xử lý cá</p>
            </div>

            <!-- Grid Card cho Đơn Vị -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-8 max-w-5xl mx-auto">
                @for (var i = 0; i < Model.ProcessingUnit.Count; i++)
                {
                    var unit = Model.ProcessingUnit[i];
                    <label for="unit_@unit.UnitId" class="block group relative h-full">
                        
                        <!-- Checkbox gửi về SelectedUnitIds -->
                        <input type="checkbox" 
                               name="SelectedUnitIds" 
                               value="@unit.UnitId" 
                               class="unit-checkbox hidden" 
                               id="unit_@unit.UnitId" 
                        />
                        
                        <div id="card_unit_@unit.UnitId" 
                             class="unit-card h-full border-2 border-gray-100 rounded-2xl p-6 text-center cursor-pointer 
                                    shadow-sm hover:shadow-lg hover:border-purple-400 hover:-translate-y-1 transition-all duration-300 
                                    flex flex-col items-center bg-white relative">
                            
                            <!-- Icon Factory/Team -->
                            <div class="w-16 h-16 mb-4 rounded-full bg-purple-50 text-purple-600 flex items-center justify-center shadow-sm">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
  <path stroke-linecap="round" stroke-linejoin="round" d="M15 9h3.75M15 12h3.75M15 15h3.75M4.5 19.5h15a2.25 2.25 0 0 0 2.25-2.25V6.75A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25v10.5A2.25 2.25 0 0 0 4.5 19.5Zm6-10.125a1.875 1.875 0 1 1-3.75 0 1.875 1.875 0 0 1 3.75 0Zm1.294 6.336a6.721 6.721 0 0 1-3.17.789 6.721 6.721 0 0 1-3.168-.789 3.376 3.376 0 0 1 6.338 0Z" />
</svg>

                            </div>
                            
                            <h4 class="text-lg font-bold text-gray-800 mb-1">@unit.UnitName</h4>
                            
                            @if (!string.IsNullOrEmpty(unit.Contact))
                            {
                                <p class="text-sm text-gray-500 flex items-center gap-1 mt-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                                      <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                                    </svg>
                                    @unit.Contact
                                </p>
                            }
                            else 
                            {
                                <p class="text-sm text-gray-400 mt-2 italic">Chưa có liên hệ</p>
                            }
                            
                            <!-- Checkmark icon -->
                            <div id="badge_unit_@unit.UnitId" class="absolute top-3 right-3 bg-purple-600 text-white rounded-full p-1 shadow-md hidden transform scale-100 transition-transform duration-300">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                </svg>
                            </div>
                        </div>
                    </label>
                }
            </div>

            <!-- Nút điều hướng Step 2 -->
            <div class="flex gap-4 justify-center pt-6 border-t border-gray-100 max-w-2xl mx-auto">
                <button type="button" id="btn-back" class="text-gray-500 hover:text-gray-800 font-semibold py-3 px-8 rounded-full hover:bg-gray-100 transition flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                    Quay lại
                </button>
                
                <button type="submit" class="bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-10 rounded-full shadow-lg hover:shadow-green-500/30 transform hover:-translate-y-0.5 transition duration-300 flex items-center gap-2">
                    Xác Nhận
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                </button>
            </div>
            
            <p id="step2-error" class="text-red-500 mt-3 hidden text-sm font-semibold text-center">
                ⚠️ Vui lòng chọn ít nhất một Đơn vị
            </p>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            
            // --- HÀM HELPER: Cập nhật giao diện thẻ (Card) ---
            // type: 'fish' hoặc 'unit'
            // color: 'blue' (cho cá) hoặc 'purple' (cho đơn vị)
            const updateVisuals = (type, color) => {
                const checkboxes = document.querySelectorAll(`.${type}-checkbox`);
                
                checkboxes.forEach(checkbox => {
                    const id = checkbox.value;
                    const card = document.getElementById(`card_${type}_${id}`);
                    const badge = document.getElementById(`badge_${type}_${id}`);

                    if (checkbox.checked) {
                        // Selected State
                        card.classList.add('ring-2', `ring-${color}-500`, `border-${color}-500`, `bg-${color}-50`);
                        card.classList.remove('border-gray-100', 'bg-white');
                        badge.classList.remove('hidden');
                    } else {
                        // Unselected State
                        card.classList.remove('ring-2', `ring-${color}-500`, `border-${color}-500`, `bg-${color}-50`);
                        card.classList.add('border-gray-100', 'bg-white');
                        badge.classList.add('hidden');
                    }
                });
            };

            // --- 1. LOGIC CHỌN CÁ ---
            const fishCheckboxes = document.querySelectorAll('.fish-checkbox');
            fishCheckboxes.forEach(cb => cb.addEventListener('change', () => updateVisuals('fish', 'blue')));
            updateVisuals('fish', 'blue'); // Init

            // --- 2. LOGIC CHỌN ĐƠN VỊ ---
            const unitCheckboxes = document.querySelectorAll('.unit-checkbox');
            unitCheckboxes.forEach(cb => cb.addEventListener('change', () => updateVisuals('unit', 'purple')));
            updateVisuals('unit', 'purple'); // Init


            // --- 3. LOGIC WIZARD (CHUYỂN BƯỚC) ---
            const step1Section = document.getElementById('step-1-section');
            const step2Section = document.getElementById('step-2-section');
            const btnNext = document.getElementById('btn-next');
            const btnBack = document.getElementById('btn-back');
            const progressBar = document.getElementById('progress-bar');
            
            const step1Error = document.getElementById('step1-error');
            const step2Error = document.getElementById('step2-error');
            const form = document.getElementById('setupForm');

            const ind1 = document.querySelector('#step1-indicator div');
            const ind2 = document.querySelector('#step2-indicator div');
            const txt1 = document.querySelector('#step1-indicator span');
            const txt2 = document.querySelector('#step2-indicator span');

            // === SỰ KIỆN: BẤM NÚT TIẾP TỤC ===
            btnNext.addEventListener('click', function() {
                const selectedCount = document.querySelectorAll('.fish-checkbox:checked').length;
                
                if (selectedCount === 0) {
                    step1Error.classList.remove('hidden');
                    return;
                }
                
                step1Error.classList.add('hidden');
                
                // Hiệu ứng chuyển đổi
                step1Section.classList.add('hidden');
                step2Section.classList.remove('hidden');

                // *** ANIMATION PROGRESS BAR ***
                // Chạy width từ 0% lên 100% (lấp đầy khoảng cách giữa 2 điểm)
                progressBar.style.width = '100%';

                // Update UI Indicators
                ind1.classList.remove('bg-blue-600', 'text-white', 'border-white');
                ind1.classList.add('bg-green-500', 'text-white', 'border-green-100');
                ind1.innerHTML = '✓';
                txt1.classList.remove('text-blue-600');
                txt1.classList.add('text-green-600');

                ind2.classList.remove('bg-gray-300', 'text-gray-600');
                ind2.classList.add('bg-blue-600', 'text-white');
                txt2.classList.remove('text-gray-400');
                txt2.classList.add('text-blue-600');
            });

            // === SỰ KIỆN: BẤM NÚT QUAY LẠI ===
            btnBack.addEventListener('click', function() {
                step2Section.classList.add('hidden');
                step1Section.classList.remove('hidden');

                // *** RESET PROGRESS BAR ***
                progressBar.style.width = '0%';

                // Reset UI Indicators
                ind1.classList.add('bg-blue-600', 'text-white', 'border-white');
                ind1.classList.remove('bg-green-500', 'text-white', 'border-green-100');
                ind1.innerHTML = '1';
                txt1.classList.add('text-blue-600');
                txt1.classList.remove('text-green-600');

                ind2.classList.add('bg-gray-300', 'text-gray-600');
                ind2.classList.remove('bg-blue-600', 'text-white');
                txt2.classList.add('text-gray-400');
                txt2.classList.remove('text-blue-600');
            });

            // === SỰ KIỆN: SUBMIT FORM (Validate bước 2) ===
            form.addEventListener('submit', function(e) {
                const selectedUnitCount = document.querySelectorAll('.unit-checkbox:checked').length;
                if (selectedUnitCount === 0) {
                    e.preventDefault(); // Chặn gửi form
                    step2Error.classList.remove('hidden');
                } else {
                    step2Error.classList.add('hidden');
                }
            });
        });
    </script>
}