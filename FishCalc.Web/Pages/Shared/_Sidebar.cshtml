<!-- 3. SCRIPT LOGIC (Nằm luôn trong Component này) -->
<script>
    function toggleSidebar() {
        const sidebar = document.getElementById('sidebar');
        const mainContent = document.getElementById('main-content'); // ID này sẽ nằm ở Layout
        const iconMenu = document.getElementById('icon-menu');
        const iconClose = document.getElementById('icon-close');
        
        const isClosed = sidebar.classList.contains('-translate-x-full');

        if (isClosed) {
            // MỞ
            sidebar.classList.remove('-translate-x-full');
            if(mainContent) mainContent.classList.add('ml-64');
            iconMenu.classList.add('hidden');
            iconClose.classList.remove('hidden');
        } else {
            // ĐÓNG
            sidebar.classList.add('-translate-x-full');
            if(mainContent) mainContent.classList.remove('ml-64');
            iconMenu.classList.remove('hidden');
            iconClose.classList.add('hidden');
        }
    }
</script>