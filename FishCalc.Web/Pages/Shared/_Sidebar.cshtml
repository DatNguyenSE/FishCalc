<!-- 3. SCRIPT LOGIC (Nằm luôn trong Component này) -->
<script>
    // Hàm thực hiện việc Đóng/Mở giao diện
    function setSidebarState(isClosed) {
        const sidebar = document.getElementById('sidebar');
        const mainContent = document.getElementById('main-content');
        const iconMenu = document.getElementById('icon-menu');
        const iconClose = document.getElementById('icon-close');
        const navTexts = document.querySelectorAll('.nav-text');
        const navItems = document.querySelectorAll('.nav-item');

        if (isClosed) {
            // --- TRẠNG THÁI: ĐÓNG (Icon Only) ---
            sidebar.classList.remove('w-64');
            sidebar.classList.add('w-20');
            
            // Ẩn chữ
            navTexts.forEach(el => {
                el.classList.add('opacity-0', 'hidden');
            });

            // Căn giữa Icon
            navItems.forEach(el => {
                el.classList.remove('justify-start');
                el.classList.add('justify-center');
            });

            // Kéo Main Content lại gần
            if (mainContent) {
                mainContent.classList.remove('ml-64');
                mainContent.classList.add('ml-20');
            }

            // Đổi nút bấm thành Menu
            iconMenu.classList.remove('hidden');
            iconClose.classList.add('hidden');

        } else {
            // --- TRẠNG THÁI: MỞ (Full Width) ---
            sidebar.classList.remove('w-20');
            sidebar.classList.add('w-64');
            
            // Hiện chữ
            navTexts.forEach(el => {
                el.classList.remove('hidden');
                setTimeout(() => el.classList.remove('opacity-0'), 50);
            });

            // Căn trái Icon + Chữ
            navItems.forEach(el => {
                el.classList.remove('justify-center');
                el.classList.add('justify-start');
            });

            // Đẩy Main Content ra xa
            if (mainContent) {
                mainContent.classList.remove('ml-20');
                mainContent.classList.add('ml-64');
            }

            // Đổi nút bấm thành Close
            iconMenu.classList.add('hidden');
            iconClose.classList.remove('hidden');
        }
    }

    // Hàm sự kiện khi bấm nút
    function toggleSidebar() {
        const sidebar = document.getElementById('sidebar');
        // Kiểm tra xem hiện tại có đang đóng không (dựa vào class w-20)
        const isCurrentlyClosed = sidebar.classList.contains('w-20');
        
        // Nếu đang ĐÓNG thì giờ sẽ MỞ (false), nếu đang MỞ thì giờ sẽ ĐÓNG (true)
        const newStateIsClosed = !isCurrentlyClosed;
        
        // 1. Cập nhật giao diện
        setSidebarState(newStateIsClosed);

        // 2. Lưu vào LocalStorage
        localStorage.setItem('fishCalcSidebarState', newStateIsClosed ? 'closed' : 'open');
    }

    // --- QUAN TRỌNG: KHI TẢI TRANG SẼ KIỂM TRA TRẠNG THÁI ĐÃ LƯU ---
    document.addEventListener('DOMContentLoaded', () => {
        // Lấy trạng thái đã lưu, mặc định là 'open' nếu chưa có
        const savedState = localStorage.getItem('fishCalcSidebarState');
        
        // Nếu đã lưu là 'closed' thì gọi hàm đóng ngay lập tức
        if (savedState === 'closed') {
            setSidebarState(true);
        } else {
            setSidebarState(false);
        }
    });
</script>