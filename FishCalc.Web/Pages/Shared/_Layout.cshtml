<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FishCalc</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 font-sans text-slate-800">

    <!-- 1. Gọi Partial Sidebar vào đây -->
    <partial name="_Sidebar" />

    <!-- 2. Phần nội dung chính của từng trang -->
    <!-- ID="main-content" và class "ml-64" rất quan trọng để khớp với Sidebar -->
    <div class="flex">
    <main id="main-content" class="flex-1 p-6 ml-20 transition-all duration-300 min-h-screen">
        @RenderBody()
    </main>
</div>

    <!-- Script chung nếu có -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>