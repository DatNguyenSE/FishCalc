@page
@model IndexModel
@{
// Loại bỏ toàn bộ
<script src="https://cdn.tailwindcss.com"></script>
// Loại bỏ toàn bộ <div class="min-h-screen bg-gray-50 relative overflow-x-hidden font-sans text-slate-800">
    // Loại bỏ toàn bộ Sidebar và Nút Toggle

    // Đặt tên trang cho _Layout.cshtml
    ViewData["Title"] = "Trang chủ";

    // Nếu bạn đã đặt Layout trong Views/_ViewImports.cshtml, không cần dòng này.
    // Nếu chưa, hãy đảm bảo Layout được set nếu bạn đã xóa Layout mặc định ở nơi khác.
    // Layout = "_Layout";
    }

    <!-- Nội dung này sẽ được RenderBody() trong _Layout.cshtml hiển thị -->

    <!-- Header -->
    <div class="mb-8 flex justify-between items-end">
        <div>
            <h1 class="text-2xl font-bold text-slate-800">Dashboard</h1>
            <p class="mt-1 text-slate-500 text-sm">Xin chào, đây là tổng quan tình hình hôm nay.</p>
        </div>
        <div class="text-sm text-slate-400">
            @DateTime.Now.ToString("dd/MM/yyyy")
        </div>
    </div>

    <!-- Khu vực Thống kê nhanh -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">

        <!-- Card Thống kê 1 -->
        <div
            class="bg-white p-6 rounded-lg shadow-sm border border-slate-200 flex flex-col justify-between h-32 hover:shadow-md transition-shadow">
            <div>
                <p class="text-xs font-bold text-slate-400 uppercase tracking-wide">Tổng Loại Cá</p>
                <p class="text-3xl font-bold text-slate-800 mt-1">@Model.TotalFishTypesCount</p>
            </div>
            <div class="self-end text-slate-300 text-3xl"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512"
                    class="w-10 h-10 fill-current">
                    <!-- Lưu ý: viewBox gốc bạn đưa là 0 0 640 640 nhưng icon này thường là 640 512 (FontAwesome Fish). Tôi đã chỉnh lại viewBox 640 512 cho cân đối, nếu icon bị méo bạn có thể đổi lại 640 640 -->
                    <path
                        d="M212.5 205.5C251.7 172.5 304.6 144 368 144C431.4 144 484.3 172.5 523.5 205.5C562.6 238.5 590.4 277.9 604.5 305.3C609.2 314.5 609.2 325.4 604.5 334.6C590.4 362 562.6 401.4 523.5 434.4C484.3 467.5 431.5 495.9 368 495.9C304.5 495.9 251.7 467.4 212.5 434.4C196.3 420.7 182 405.9 169.8 391.3L80.1 443.6C67.6 450.9 51.7 448.9 41.4 438.7C31.1 428.5 29 412.7 36.1 400.1L82 320L36.2 239.9C29 227.3 31.2 211.5 41.5 201.3C51.8 191.1 67.6 189.1 80.2 196.4L169.9 248.7C182.1 234.1 196.4 219.3 212.6 205.6zM480 320C480 302.3 465.7 288 448 288C430.3 288 416 302.3 416 320C416 337.7 430.3 352 448 352C465.7 352 480 337.7 480 320z" />
                </svg> </div>
        </div>

        <!-- Card Thống kê 2 -->
        <div
            class="bg-white p-6 rounded-lg shadow-sm border border-slate-200 flex flex-col justify-between h-32 hover:shadow-md transition-shadow">
            <div>
                <p class="text-xs font-bold text-slate-400 uppercase tracking-wide">Cá Nhập Hôm Nay</p>
                <div class="flex items-end gap-2">
                    <p class="text-3xl font-bold text-slate-800 mt-1">2,350</p>
                    <span class="text-sm text-slate-500 mb-1">kg</span>
                </div>
            </div>
            <div class="self-end text-emerald-200 text-3xl">⚖️</div>
        </div>

        <!-- Card Thống kê 3 -->
        <div
            class="bg-white p-6 rounded-lg shadow-sm border-l-4 border-red-400 flex flex-col justify-between h-32 hover:shadow-md transition-shadow">
            <div>
                <p class="text-xs font-bold text-slate-400 uppercase tracking-wide">Lương Cần Trả</p>
                <div class="flex items-end gap-2">
                    <p class="text-3xl font-bold text-red-600 mt-1">2.5M</p>
                    <span class="text-sm text-red-400 mb-1">VNĐ</span>
                </div>
            </div>
            <div class="self-end text-red-200 text-3xl">⚠️</div>
        </div>

    </div>

    <!-- Khu vực Biểu đồ / Nội dung chính -->
    <div
        class="bg-white rounded-lg shadow-sm border border-slate-200 p-6 h-96 flex flex-col items-center justify-center text-slate-400">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mb-4 opacity-50" fill="none" viewBox="0 0 24 24"
            stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z" />
        </svg>
        <p>Khu vực hiển thị biểu đồ và báo cáo chi tiết</p>
        <p class="text-sm mt-2">(Chức năng đang phát triển)</p>
    </div>