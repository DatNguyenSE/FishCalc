
@page "/Fish"
@model FishCalc.Web.Pages.Fish.FishTypesModel
@{
    ViewData["Title"] = "Quản lý Loại Cá";
}
<div>
    
</div>
<div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-slate-800">Danh sách Loại Cá</h1>
    <a asp-page="./Create" class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition shadow-sm">
        + Thêm mới
    </a>
</div>

<!-- Bảng dữ liệu -->
<div class="bg-white rounded-lg shadow-sm border border-slate-200 overflow-hidden">
    <table class="min-w-full divide-y divide-slate-200">
        <thead class="bg-slate-50">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Tên Loại</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Đơn Vị</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Giá</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-slate-500 uppercase tracking-wider">Thao tác</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-slate-200">
            @foreach (var item in Model.FishTypes)
            {
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-slate-900">@item.Name</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">@item.UnitOfMeasure</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">@(item.PricePerUnitOfMeasure)</td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <a asp-page="/Fish/UpdateFishType" asp-route-id="@item.Id" class="text-indigo-600 hover:text-indigo-900 mr-3">Sửa</a>
                        <a href="/Fish" class="text-red-600 hover:text-red-900">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
