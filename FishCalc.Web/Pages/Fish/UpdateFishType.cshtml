@page
@model FishCalc.Web.Pages.Fish.UpdateFishTypeModel
@{
    ViewData["Title"] = "Cập nhật loại cá";
}

<div class="max-w-4xl mx-auto py-10 px-4 sm:px-6 lg:px-8">
    <div class="mb-8 text-center sm:text-left">
        <h2 class="text-3xl font-extrabold text-slate-900 tracking-tight">Cập nhật loại cá</h2>
        <p class="mt-2 text-lg text-slate-600">Chỉnh sửa thông tin và hình ảnh minh họa cho loại cá.</p>
    </div>

    <div class="bg-white shadow-xl rounded-2xl overflow-hidden border border-slate-100">
        <form method="post" enctype="multipart/form-data" class="p-8">
            <input type="hidden" asp-for="FishType.Id" />
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                
                <div class="md:col-span-1 flex flex-col items-center">
                    <label class="block text-sm font-medium text-slate-700 mb-2 w-full text-center">Hình ảnh minh họa</label>
                    
                    <div class="relative w-full aspect-square bg-slate-50 border-2 border-dashed border-slate-300 rounded-xl flex items-center justify-center overflow-hidden hover:bg-slate-100 transition-colors group cursor-pointer">
                        <img id="imagePreview" 
                             src="@(string.IsNullOrEmpty(Model.FishType.ImgFishUrl) ? "/images/default-fish.png" : Model.FishType.ImgFishUrl)" 
                             alt="Fish Preview" 
                             class="absolute inset-0 w-full h-full object-cover @(string.IsNullOrEmpty(Model.FishType.ImgFishUrl) ? "hidden" : "")" />
                        
                        <div id="uploadPlaceholder" class="flex flex-col items-center justify-center p-4 text-slate-400 @(!string.IsNullOrEmpty(Model.FishType.ImgFishUrl) ? "hidden" : "")">
                            <svg class="w-10 h-10 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                            <span class="text-xs text-center">Nhấn để tải ảnh lên</span>
                        </div>

                        <input asp-for="ImageUpload" type="file" accept="image/*" class="absolute inset-0 w-full h-full opacity-0 cursor-pointer" onchange="previewImage(this)"/>
                    </div>
                    <p class="text-xs text-slate-500 mt-2 text-center">PNG, JPG, GIF tối đa 5MB</p>
                </div>

                <div class="md:col-span-2 space-y-6">
                    
                    <div>
                        <label asp-for="FishType.Name" class="block text-sm font-semibold text-slate-700 mb-1">Tên loại cá</label>
                        <input asp-for="FishType.Name" class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all outline-none" placeholder="Ví dụ: Cá Hồi Na Uy" />
                        <span asp-validation-for="FishType.Name" class="text-red-500 text-sm mt-1 block"></span>
                    </div>

                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="FishType.UnitOfMeasure" class="block text-sm font-semibold text-slate-700 mb-1">Đơn vị tính</label>
                            <input asp-for="FishType.UnitOfMeasure" class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all outline-none" placeholder="kg, con..." />
                            <span asp-validation-for="FishType.UnitOfMeasure" class="text-red-500 text-sm mt-1 block"></span>
                        </div>

                        <div>
                            <label asp-for="FishType.PricePerUnit" class="block text-sm font-semibold text-slate-700 mb-1">Giá hiện tại (VNĐ)</label>
                            <div class="relative">
                                <input asp-for="FishType.PricePerUnit" type="number" step="1" class="w-full pl-4 pr-12 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all outline-none" />
                                <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                    <span class="text-slate-500 sm:text-sm">đ</span>
                                </div>
                            </div>
                            <span asp-validation-for="FishType.PricePerUnit" class="text-red-500 text-sm mt-1 block"></span>
                        </div>
                    </div>

                    <div class="pt-6 flex items-center justify-end gap-4 border-t border-slate-100 mt-6">
                        <a asp-page="./FishTypes" class="px-5 py-2.5 text-sm font-medium text-slate-600 bg-white border border-slate-300 rounded-lg hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
                            Hủy bỏ
                        </a>
                        <button type="submit" class="px-5 py-2.5 text-sm font-medium text-white bg-indigo-600 rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 shadow-sm transition-colors flex items-center">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                            Lưu thay đổi
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Script hiển thị ảnh ngay khi chọn (Preview)
        function previewImage(input) {
            const preview = document.getElementById('imagePreview');
            const placeholder = document.getElementById('uploadPlaceholder');
            
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.classList.remove('hidden');
                    placeholder.classList.add('hidden');
                }
                
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}