@page
@model FishCalc.Web.Pages.Fish.UpdateFishTypeModel
@{
    ViewData["Title"] = "Cập nhật loại cá";
}

<div class="max-w-2xl mx-auto py-8">
    <div class="mb-6">
        <h2 class="text-2xl font-bold text-slate-900">Cập nhật thông tin loại cá</h2>
        <p class="text-slate-500">Chỉnh sửa thông tin chi tiết bên dưới.</p>
    </div>

    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <form method="post">
            <input type="hidden" asp-for="FishType.Id" />

            <div class="mb-4">
                <label asp-for="FishType.Name" class="block text-gray-700 text-sm font-bold mb-2">
                    Tên loại cá
                </label>
                <input asp-for="FishType.Name" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-indigo-500" type="text" placeholder="Nhập tên cá (ví dụ: Cá Hồi)">
                <span asp-validation-for="FishType.Name" class="text-red-500 text-xs italic"></span>
            </div>

            <div class="mb-4">
                <label asp-for="FishType.UnitOfMeasure" class="block text-gray-700 text-sm font-bold mb-2">
                    Đơn vị tính
                </label>
                <input asp-for="FishType.UnitOfMeasure" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-indigo-500" type="text" placeholder="kg, con, tạ...">
                <span asp-validation-for="FishType.UnitOfMeasure" class="text-red-500 text-xs italic"></span>
            </div>

            <div class="mb-6">
                <label asp-for="FishType.PricePerUnit" class="block text-gray-700 text-sm font-bold mb-2">
                    Giá đơn vị (VNĐ)
                </label>
                <input asp-for="FishType.PricePerUnit" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-indigo-500" type="number" step="0.01">
                <span asp-validation-for="FishType.PricePerUnit" class="text-red-500 text-xs italic"></span>
            </div>

            <div class="flex items-center justify-between">
                <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition duration-150 ease-in-out">
                    Lưu thay đổi
                </button>
                <a asp-page="./FishTypes" class="inline-block align-baseline font-bold text-sm text-indigo-600 hover:text-indigo-800">
                    Hủy / Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}